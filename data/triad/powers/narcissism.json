{
  "type": "origins:action_over_time",
  "name": "Narcissism",
  "description": "Your presence demands attention.",

  "interval": 20,

  "entity_action": {
    "type": "origins:and",
    "actions": [

      {
        "type": "origins:execute_command",
        "command": "effect give @s minecraft:glowing 2 0 true"
      },
      {
        "type": "origins:execute_command",
        "command": "effect give @s minecraft:speed 2 1 true"
      },
      {
        "type": "origins:execute_command",
        "command": "effect give @s minecraft:strength 2 1 true"
      },

      {
        "type": "origins:execute_command",
        "command": "execute unless entity @e[distance=0.0001..16] run effect give @s minecraft:slowness 2 4 true"
      }
    ]
  }
}
